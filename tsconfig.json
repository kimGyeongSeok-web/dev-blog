{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": [
      "react",
      "@emotion/react/types/css-prop"
    ],
    "baseUrl": "./",
    "paths": {
      "@/public/icons/*": [
        "public/icons/*"
      ],
      "@/public/images/*": [
        "public/images/*"
      ],
      "@/src/components/*": [
        "src/components/*"
      ],
      "@/src/modules/*": [
        "src/modules/*"
      ],
      "@/src/styles/*": [
        "src/styles/*"
      ],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
